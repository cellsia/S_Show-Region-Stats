{
  "name": "Show Region Stats",
  "description": "Plugin to show up statistics from a region-annotation",
  "container-image": {
    "image": "glardies/s_show-region-stats",
    "type": "singularity"
  },
  "command-line": "[CYTOMINE_HOST] [CYTOMINE_PUBLIC_KEY] [CYTOMINE_PRIVATE_KEY] [CYTOMINE_ID_PROJECT] [ID_ANNOTATION]  [TERMS_TO_ANALYZE] [IMAGES_TO_ANALYZE]",
  "inputs": [
    {
      "id": "cytomine_host",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine host",
      "set-by-server": true,
      "optional": false,
      "type": "String"
    },
    {
      "id": "cytomine_public_key",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine public key",
      "set-by-server": true,
      "optional": false,
      "type": "String"
    },
    {
      "id": "cytomine_private_key",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine private key",
      "set-by-server": true,
      "optional": false,
      "type": "String"
    },
    {
      "id": "cytomine_id_project",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine project ID",
      "set-by-server": true,
      "optional": false,
      "type": "Number"
    },
    {
      "name": "Cytomine software id",
      "description": "Cytomine software id",
      "set-by-server": true,
      "value-key": "@ID",
      "optional": false,
      "id": "cytomine_id_software",
      "type": "Number",
      "command-line-flag": "--@id"
    },
    {
      "id": "cytomine_id_annotation",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine annotation ID",
      "description": "ID de la annotacion (opcional si se selecciona un término)",
      "set-by-server": false,
      "optional": true,
      "type": "Number" 
    },
    {
      "name": "terms_to_analyze",
      "description": "Término a analizar (opcional si se introduce ID de anotación)",
      "set-by-server": false,
      "value-key": "@ID",
      "optional": true,
      "id": "terms_to_analyze",
      "type": "ListDomain",
      "uri": "/api/project/$currentProject$/term.json",
      "uri-print-attribute": "name",
      "uri-sort-attribute": "name",
      "command-line-flag": "--@id",
      "default-value":"Stats"
    },
    {
      "id": "images_to_analyze",
      "description": "Imagen que contiene la anotación (opcional)",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine image",
      "set-by-server": false,
      "optional": true,
      "type": "Domain",
      "uri":"/api/project/$currentProject$/imageinstance.json",
      "uri-print-attribute":"instanceFilename",
      "uri-sort-attribute":"instanceFilename"
    }
  ],

  "schema-version": "cytomine-0.1"
}